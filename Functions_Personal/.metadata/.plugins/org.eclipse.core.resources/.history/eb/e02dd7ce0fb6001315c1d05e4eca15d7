 * 
 * Below is code to calculat a player's KDA (kills + deaths)/Assists in any game that has those statistics
 */

var yourKDA;	// Keeps track of the user's KDA
var numKills;	// The number of kills the user has
var numDeaths;	// The number of deaths the user has
var numAssists;	// The number of assists the user has

numKills = parseInt(prompt("Enter how many kills you achieved"));
numDeaths = parseInt(prompt("Enter how many deaths you had"));
numAssists = parseInt(prompt("Enter how many assists you had"));

if((!isNan(parseFloat(numKills)) && isFinite(numKills)) === false){
	alert("Invalid input for 'Kills'");
}else if((!isNan(parseFloat(numDeaths)) && isFinite(numDeaths)) === false){
	alert("Invalid input for 'Deaths'");
}else if((!isNan(parseFloat(numAssists)) && isFinite(numAssists)) === false){
	alert("Invalid input for 'Assists'");
}else{
	yourKDA = calcKDA(numKills, numDeaths, numAssists);

	console.log("Your KDA is " + yourKDA + ".");
}


function calcKDA(kills, deaths, assists){
	var kda = (kills + assists) / deaths;
	return kda;
}

